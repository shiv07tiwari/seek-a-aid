    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_marginRight="13sp"
        android:layout_marginLeft="13sp"
        android:layout_marginStart="13sp"
        android:layout_marginEnd="13sp"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:text="52%"
            android:textColor="@color/blue" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="52%"
            android:textColor="@color/red" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:id="@+id/text_please_allot"
        android:layout_gravity="center"
        android:textSize="21dp"
        android:textColor="@color/gray"
        android:fontFamily="sans-serif-condensed"
        android:text="PLEASE ALLOT THE MEMBERS!"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/textview_border"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="ALLOTED MEMBERS"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:layout_marginLeft="10dp">
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="Arsh Pangal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="Sid" />
    </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_update_status"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/red"
        android:text="UPDATE COMPLAINT STATUS!"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="5sp"
        android:textColor="@color/dark_green"
        android:gravity="center"
        android:text="STATUS" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <android.support.v7.widget.RecyclerView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/statusList">

        </android.support.v7.widget.RecyclerView>
    </ScrollView>


</LinearLayout>